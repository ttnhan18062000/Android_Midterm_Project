<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.editor.EditorFragment"
    android:id="@+id/editorFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <com.example.bottomnavigationactivity.editor_components.ColorPickerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/colorPicker"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/showmaker"
                />
            <com.example.bottomnavigationactivity.editor_components.MyPaintView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paintView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">
<!--        <Button-->
<!--            android:layout_weight="2"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="30sp"-->
<!--            android:text="L"-->
<!--            android:id="@+id/btnScrollLeft"/>-->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_number_list"/>

<!--        <Button-->
<!--            android:layout_weight="2"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="30sp"-->
<!--            android:text="R"-->
<!--            android:id="@+id/btnScrollRight"/>-->

<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:id="@+id/buttonLine"-->
<!--            android:text="Line"/>-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonClear"
            android:text="Clr"
            android:layout_weight="2"/>

<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:text="Eraser"-->
<!--            android:id="@+id/buttonEraser"/>-->
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonChooseImage"
            android:text="Open"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            />
    </LinearLayout>
</LinearLayout>