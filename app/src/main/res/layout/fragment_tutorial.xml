<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:background="@drawable/gradient_background_1">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager_tutorial"
        android:layout_margin="@dimen/margin_xxsmall"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cutout_safe_area"
        android:layout_margin="@dimen/margin_xxsmall">
        <ImageButton
            android:id="@+id/image_view_tutorial_1"
            android:contentDescription="@string/delete_button_alt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image_view_tutorial_2"
            android:layout_marginRight="@dimen/margin_xssmall"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            android:alpha="1"/>
        <ImageButton
            android:id="@+id/image_view_tutorial_2"
            android:contentDescription="@string/delete_button_alt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image_view_tutorial_3"
            android:layout_marginRight="@dimen/margin_xssmall"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            android:alpha="0.5"/>
        <ImageButton
            android:id="@+id/image_view_tutorial_3"
            android:contentDescription="@string/delete_button_alt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            android:alpha="0.4"/>
        <ImageButton
            android:id="@+id/image_view_tutorial_4"
            android:contentDescription="@string/delete_button_alt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            android:alpha="0.4"/>
        <ImageButton
            android:id="@+id/image_view_tutorial_5"
            android:contentDescription="@string/delete_button_alt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_view_tutorial_4"
            android:layout_marginLeft="@dimen/margin_xssmall"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            android:alpha="0.4"/>
        <ImageButton
            android:id="@+id/image_view_tutorial_6"
            android:contentDescription="@string/delete_button_alt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_view_tutorial_5"
            android:layout_marginLeft="@dimen/margin_xssmall"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            android:alpha="0.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>